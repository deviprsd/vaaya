<resources>

    <!-- Base application theme. -->
    <style name="VaayaTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentLight</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="VaayaTheme.AppBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentLight</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="VaayaTheme.Mono" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/statusBarColor</item>
        <item name="colorPrimary">@color/statusBarColor</item>
        <item name="colorPrimaryDark">@color/statusBarColor</item>
        <item name="colorAccent">@color/colorAccentLight</item>
    </style>

    <style name="VaayaTheme.Splash" parent="VaayaTheme.Mono">
        <item name="android:windowBackground">@drawable/vaaya_splash</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="VaayaTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="VaayaTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="VaayaTheme.Ellipsis">
        <item name="android:ellipsize">end</item>
    </style>

</resources>
